{
  "name": "sistemapos",
  "private": true,
  "version": "2.1.7",
  "type": "module",
  "main": "electron-main.cjs",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "start": "node server/index.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5174 && cross-env NODE_ENV=development electron .\"",
    "electron:start": "cross-env NODE_ENV=production electron .",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "@capacitor/android": "^7.0.0",
    "@capacitor/cli": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@vladmandic/face-api": "^1.7.12",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "express": "^4.21.2",
    "firebase": "^12.7.0",
    "lucide-react": "^0.562.0",
    "nodejs-mobile-cordova": "^0.4.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.11.0",
    "recharts": "^3.6.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.3",
    "xlsx": "https://cdn.sheetjs.com/xlsx-latest/xlsx-latest.tgz"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.laautentica.pos",
    "productName": "Sistema POS La Autentica",
    "copyright": "Copyright Â© 2026 Luvin Rafael Bustillos Diaz",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "server/**/*",
      "electron-main.cjs",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "extraResources": [
      "server/**/*",
      "dist/**/*"
    ]
  }
}